generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===== ENUMS =====
enum UserStatus {
  ACTIVE
  INACTIVE
}

enum SystemRole {
  ADMINISTRADOR
  GERENTE
  AUDITOR
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  TWO_FACTOR
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

// ===== MODELS =====

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // User fields (comunes a todos)
  names               String
  lastNames           String     @map("last_names")
  email               String     @unique
  phone               String?
  username            String     @unique
  password            String
  ci                  String     @unique
  image               String?
  address             String?    @db.Text
  status              UserStatus @default(ACTIVE)
  failedLoginAttempts Int        @default(0) @map("failed_login_attempts")
  lockUntil           DateTime?  @map("lock_until")

  // Perfiles especializados (uno u otro existirá para cada usuario)
  internalProfile InternalProfile?
  externalProfile ExternalProfile?

  // Relations comunes
  sessions              Session[]
  otps                  Otp[]
  receivedNotifications Notification[] @relation("ReceivedNotifications")
  createdNotifications  Notification[] @relation("CreatedNotifications")

  @@map("users")
}

// Perfil para usuarios INTERNOS (staff del sistema)
model InternalProfile {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // FK a User (1:1)
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Roles del sistema (solo para INTERNAL)
  roles String[] // ['administrador', 'gerente', 'auditor']

  // Campos específicos de personal interno
  department   String? // Ej: "Auditoría", "Gestión"
  employeeCode String?   @unique @map("employee_code")
  hireDate     DateTime? @map("hire_date")

  // Relations específicas
  managedAudits Audit[]      @relation("ManagedAudits")
  auditorAudits Audit[]      @relation("AuditAuditors")
  evaluations   Evaluation[]

  @@map("internal_profiles")
}

// Perfil para usuarios EXTERNOS (clientes organizacionales)
model ExternalProfile {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // FK a User (1:1)
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // FK a Organization (OBLIGATORIO)
  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Campos específicos de clientes
  jobTitle            String?   @map("job_title") // Ej: "Jefe de RRHH"
  department          String? // Ej: "Recursos Humanos"
  organizationalEmail String?   @unique @map("organizational_email")
  isActive            Boolean   @default(true) @map("is_active")
  joinedAt            DateTime  @default(now()) @map("joined_at")
  leftAt              DateTime? @map("left_at")

  @@index([organizationId])
  @@map("external_profiles")
}

// Organización (empresas clientes)
model Organization {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Organization fields
  name        String  @unique
  description String? @db.Text
  address     String? @db.Text
  phone       String?
  email       String?
  logo        String?
  banner      String?
  mission     String? @db.Text
  vision      String? @db.Text
  values      String? @db.Text
  website     String?
  taxId       String? @unique @map("tax_id") // RUC, NIT, etc.
  isActive    Boolean @default(true) @map("is_active")

  // Relations
  members ExternalProfile[]
  audits  Audit[]           @relation("OrganizationAudits")

  @@map("organizations")
}

