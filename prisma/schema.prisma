model Session {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Session fields
  userId       String    @map("user_id")
  refreshToken String    @map("refresh_token") @db.Text
  currentRole  String    @map("current_role") // Rol activo de esta sesión
  expiresAt    DateTime  @map("expires_at")
  ipAddress    String?   @map("ip_address")
  userAgent    String?   @map("user_agent")
  isActive     Boolean   @default(true) @map("is_active")
  lastUsedAt   DateTime? @map("last_used_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Otp {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // OTP fields
  userId    String    @map("user_id")
  code      String    @db.VarChar(10)
  type      OtpType
  expiresAt DateTime  @map("expires_at")
  isUsed    Boolean   @default(false) @map("is_used")
  usedAt    DateTime? @map("used_at")
  attempts  Int       @default(0)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("otps")
}

model Audit {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Audit fields
  title       String
  description String? @db.Text

  // Manager debe ser INTERNAL
  managerId String          @map("manager_id")
  manager   InternalProfile @relation("ManagedAudits", fields: [managerId], references: [id])

  // Auditors deben ser INTERNAL
  auditors InternalProfile[] @relation("AuditAuditors")

  // Organization (EXTERNAL)
  organizationId String       @map("organization_id")
  organization   Organization @relation("OrganizationAudits", fields: [organizationId], references: [id])

  @@map("audits")
}

model Evaluation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Evaluation fields
  title       String
  description String? @db.Text

  // InternalProfile que realiza la evaluación
  internalProfileId String          @map("internal_profile_id")
  internalProfile   InternalProfile @relation(fields: [internalProfileId], references: [id])

  @@map("evaluations")
}

model Notification {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Notification fields
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?
  metadata    Json?
  isRead      Boolean          @default(false) @map("is_read")
  readAt      DateTime?        @map("read_at")
  recipientId String           @map("recipient_id")
  createdById String?          @map("created_by_id")

  // Relations
  recipient User  @relation("ReceivedNotifications", fields: [recipientId], references: [id], onDelete: Cascade)
  createdBy User? @relation("CreatedNotifications", fields: [createdById], references: [id], onDelete: SetNull)

  @@index([recipientId])
  @@index([recipientId, isRead])
  @@map("notifications")
}
