generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===== ENUMS =====
enum UserStatus {
  ACTIVE
  INACTIVE
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  TWO_FACTOR
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

// ===== MODELS =====

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // User fields
  names               String
  lastNames           String      @map("last_names")
  email               String      @unique
  phone               String?
  username            String      @unique
  password            String
  ci                  String      @unique
  image               String?
  address             String?     @db.Text
  status              UserStatus  @default(ACTIVE)
  failedLoginAttempts Int         @default(0) @map("failed_login_attempts")
  lockUntil           DateTime?   @map("lock_until")
  roles               String[]    // Array: ['administrador', 'gerente']

  // Relations
  sessions              Session[]
  otps                  Otp[]
  managedAudits         Audit[]        @relation("ManagedAudits")
  clientAudits          Audit[]        @relation("ClientAudits")
  auditorAudits         Audit[]        @relation("AuditAuditors")
  evaluations           Evaluation[]
  receivedNotifications Notification[] @relation("ReceivedNotifications")
  createdNotifications  Notification[] @relation("CreatedNotifications")

  @@map("users")
}

